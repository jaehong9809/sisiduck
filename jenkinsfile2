pipeline {
    agent any

    environment {
        ENV_FILE = credentials('env-file-credentials')  // Jenkinsì— ë“±ë¡ëœ .env íŒŒì¼
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Copy .env File') {
            steps {
                dir('finafanAI') {
                    withCredentials([
                        file(credentialsId: 'env-file-credentials', variable: 'ENV_FILE')
                    ]) {
                        sh '''
                            echo "ğŸ“¦ Copying .env from Jenkins credentials"
                            cp $ENV_FILE .env
                            chmod 600 .env
                        '''
                    }
                }
            }
        }

        stage('Stop Existing Containers') {
            steps {
                dir('finafanAI') {
                    sh '''
                        docker ps -q --filter "name=ai-server" | xargs -r docker stop
                        docker ps -aq --filter "name=ai-server" | xargs -r docker rm
                    '''
                }
            }
        }

        stage('Docker Compose Up') {
            steps {
                dir('finafanAI') {
                    sh 'docker-compose down'
                    sh 'docker-compose up -d --build'
                }
            }
        }

        stage('Cleanup Docker Images') {
            steps {
                echo 'ğŸ§¹ ì‚¬ìš©í•˜ì§€ ì•ŠëŠ” Docker ì´ë¯¸ì§€ ì •ë¦¬ ì¤‘...'
                sh 'docker image prune -f'
            }
        }
    }

    post {
        success {
            echo 'âœ… FastAPI ì„œë²„ ë°°í¬ ì„±ê³µ!'
        }
        failure {
            echo 'âŒ FastAPI ì„œë²„ ë°°í¬ ì‹¤íŒ¨!'
        }
    }
}
